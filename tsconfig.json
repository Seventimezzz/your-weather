{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".src",
        "paths": {
          "app/*": ["app/*"],
          "pages/*": ["pages/*"],
          "widgets/*": ["widgets/*"],
          "entities/*": ["entities/*"],
          "shared/*": ["shared/*"],
        }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
}